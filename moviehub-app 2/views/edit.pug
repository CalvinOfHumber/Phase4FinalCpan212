extends layout 

block content
  h1 Edit Movie
  form(action=`/movies/${movie._id}/edit`, method="POST")
    div
      label Name:
      input(type="text", name="name", value=movie.name, required)
    div
      label Description:
      textarea(name="description", required)= movie.description
    div
      label Year:
      input(type="number", name="year", value=movie.year, required)
    div
      label Genres:
      input(type="text", name="genres", value=movie.genres, required)
    div
      label Rating:
      input(type="number", name="rating", value=movie.rating, min="1", max="10", required)
    button(type="submit") Update

extends layout 

block content
  h1 Add a New Movie

  form(method="POST", action="/movies/add")
    div
      label(for="name") Movie Name:
      input(type="text", name="name", required)
    div
      label(for="description") Description:
      textarea(name="description", required)
    div
      label(for="year") Release Year:
      input(type="number", name="year", required)
    div
      label(for="genres") Genres (comma separated):
      input(type="text", name="genres", required)
    div
      label(for="rating") Rating (1 to 10):
      input(type="number", name="rating", min="1", max="10", required)
    div
      button(type="submit") Add Movie
